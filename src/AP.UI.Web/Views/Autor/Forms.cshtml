@model AP.Model.Models.Autor
@{
    ViewData["Title"] = "Cdastro de Autor";
}

<p></p>
<h2>Cdastro de Autor</h2>
<form id="formCadastroAutor">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input asp-for="Nome" type="text" class="form-control is-valid" id="Nome" name="Nome" placeholder="Ex.: João" maxlength="20" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Sobrenome">Sobrenome:</label>
                <input asp-for="Sobrenome" type="text" class="form-control" id="Sobrenome" name="Sobrenome" placeholder="Ex.: da Silva" maxlength="20" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Idade">Idade:</label>
                <input required="required" type="number" class="form-control" id="Idade" name="Idade" placeholder="Ex.: 25" maxlength="5">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="pull-right">
                @Html.ActionLink("Voltar", "Index", "Autor", new { }, new { @class = "btn btn-sm btn-danger" })
                <button type="submit" onClick="btnIncluir($(this))" class="btn btn-sm btn-success">Salvar</button>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">

    function btnIncluir() {
        $('#formCadastroAutor').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("Incluir", "Aluno")',
                method: "POST",
                data: $('Form#formCadastroAutor').serialize(),
                error:
                    function (r) {
                        if (r)
                            $.Notification.notify('error', 'top center', 'Falha', 'Ocoreru um erro.');
                    },
                success:
                    function (r) {
                        $.Notification.notify('success', 'top center', 'Sucesso', 'Salvo com sucesso.');
                    }
            });
        })
    }
</script>
